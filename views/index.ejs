<%- include('partials/header.ejs') %>

<div class="container mt-5">
  <div class="row">
    <div class="col-12 text-center">
      <h2 class="mb-4">My Saved Books</h2>
    </div>
  </div>
  <div class="row">
    <% books.forEach(book => { %>
      <div class="col-md-12 mb-4">
        <div class="card shadow-sm h-100">
          <div class="row g-0">
            <div class="col-md-4 d-flex align-items-center justify-content-center p-3">
              <img src="https://covers.openlibrary.org/b/isbn/<%= book.cover_id %>-S.jpg" class="img-fluid book-cover" alt="Book Cover">
            </div>
            <div class="col-md-8">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title fw-bold"><%= book.name %></h5>
                <p class="card-text"><strong>Author:</strong> <%= book.author %></p>
                <p class="card-text"><strong>Review:</strong> <%= book.review_text %></p>
                <div class="mt-auto">
                  <a href="#" class="btn btn-outline-dark btn-sm">Edit</a>
                  <a href="#" class="btn btn-outline-danger btn-sm ms-2">Delete</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
</div>

<%- include('partials/footer.ejs') %>
