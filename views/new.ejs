<%- include('partials/header.ejs') %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h2>Add a New Book</h2>
      <form action="/save-book" method="post">
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input type="text" class="form-control" id="name" name="name" required>
        </div>
        <div class="mb-3">
          <label for="author" class="form-label">Author</label>
          <input type="text" class="form-control" id="author" name="author" required>
        </div>
        <div class="mb-3">
          <label for="review" class="form-label">Review</label>
          <textarea class="form-control" id="review" name="review" rows="3" required></textarea>
        </div>
        <div class="mb-3">
          <label for="coverId" class="form-label">Cover id</label>
          <input type="id" class="form-control" id="coverId" name="coverId" required>
        </div>
        <div class="mb-3">
          <label for="rating" class="form-label">Rating</label>
          <input type="rating" class="form-control" id="rating" name="rating" required>
        </div>       
        <button type="submit" class="btn btn-primary">Save Book</button>
      </form>
    </div>
  </div>
</div>

<%- include('partials/footer.ejs') %>
